{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="example-wrapper">
   {% for article in articles %}
       <article>
              <h2>{{ article.title }}</h2>
              <div class="article-content">
                     {{ article.body }}
              </div>
              <div>
                     Дата создания: {{ article.createdAt|date('d.m.Y.H:i:s')}}
              </div>
       </article>
   {% endfor %}

</div>
{% endblock %}
