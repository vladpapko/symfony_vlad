{# templates/admin/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .comment { margin-bottom: 15px; padding: 10px; border: 1px solid #ddd; }
        .comment-actions { margin-top: 10px; }
    </style>

    <div class="example-wrapper">
        <h1>Админ панель</h1>

        <h2>Comments</h2>
        {% for comment in comments %}
            <div class="comment">
                <p>{{ comment.content }}</p>
                <div class="comment-actions">
                    <a href="{{ path('admin_approve_comment', {'id': comment.id}) }}">Одобрить</a>
                    <a href="{{ path('admin_reject_comment', {'id': comment.id}) }}">Отклонить</a>
                    <a href="{{ path('admin_delete_comment', {'id': comment.id}) }}">Удалить</a>
                </div>
            </div>
        {% else %}
            <p>No comments to display.</p>
        {% endfor %}
    </div>
{% endblock %}